generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  name         String?
  password     String
  phone        String?
  region       String?
  city         String?
  postOffice   String?
  role         String  @default("user")
  resetPassKey String? @unique
  resetExp     String?
}

model Product {
  id          Int             @id @unique @default(autoincrement())
  title       String
  description String
  images      ProductImages[]
  // category    Category @relation(fields: [category_id], references: [id])
  // category_id Int
  slug        String          @unique
  price       Float
  discount    Float?
  color       String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  sizes       ProductSize[]
}

model ProductImages {
  id        Int     @id @unique @default(autoincrement())
  productId Int
  Product   Product @relation(fields: [productId], references: [id])
  url       String
}

model ProductSize {
  id        Int     @id @unique @default(autoincrement())
  productId Int
  size      String
  quantity  Int
  Product   Product @relation(fields: [productId], references: [id])
}

